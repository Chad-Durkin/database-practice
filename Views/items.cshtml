@{
    Layout="/Shared/_Layout.cshtml";
}

<h1>Your inventory item</h1>
<h2>Your list is</h2>
@if(@Model.Count == 0)
{
  <h2>EMPTY</h2>
}

<ul>
  @foreach (var item in @Model)
  {
    <li><a href="/item/@item.GetId()">@item.GetName()<a></li>
  }
</ul>

<form action="/items_cleared" method="post">
  <button type="submit">Clear All your entry</button>
</form>

<a href="/">Home</a>
